@model SupeRSAfe.DTO.Manage.MainViewModel
@{
    ViewData["Title"] = "Home Page";

    TempData.Keep();
}

<div class="container-fluid maxx">
    <div class="row full-width-row">
        <div class="col-4 main">
            <div class="center">
                <h3>Emails</h3>
                @Html.ActionLink("Clear Email", "ChoseEmail", "Home",
                        new
                        {
                            id = 0
                        },
                        htmlAttributes: new
                        {
                            @class = "btn btn-sm myButton",
                        })
                </div>
                @if (Model.Emails != null)
                {
                    <ul class="list-group">
                        @foreach (var email in Model.Emails)
                        {
                            <a class="a-email" asp-action="ChoseEmail" asp-controller="Home" asp-route-id="@email.Id">
                                <li>
                                    <div>
                                        <h4>@email.Subject</h4>
                                        <p>@email.Date</p>
                                        <hr>
                                    </div>
                                </li>
                            </a>
                        }
                    </ul>
                }
                else
                {
                    <h3>Mailbox is empty</h3>
                }
            </div>
            <div class="col-5 main">
                @if (Model.ChosenEmail != null)
                {
                <div>
                    <h4>@Model.ChosenEmail.Subject</h4>
                    <h5>From: @Model.ChosenEmail.Sender.UserName</h5>
                    <h6>@Model.ChosenEmail.Date</h6>
                    <hr>
                    <p>@Model.ChosenEmail.Message</p>
                </div>
                }
                else
                {
                    <h3>Choose an email.</h3>
                }
            </div>
            <div class="col-3 main">
                <div class="center">
                    <h3>Keys</h3>
                    @Html.ActionLink("Clear Key", "ChoseKey", "Home",
                            new
                            {
                                id = 0
                            },
                            htmlAttributes: new
                            {
                                @class = "btn btn-sm myButton",
                            })
                </div>
                @if (Model.Keys != null)
                {
                    <ul class="list-group">
                        @foreach (var key in Model.Keys)
                        {
                            <a class="a-email" asp-action="ChoseKey" asp-controller="Home" asp-route-id="@key.Id">
                                <li>
                                    <div class="col-12">
                                        <h5>Public key</h5>
                                        <p>@key.OpenKey</p>
                                        <hr>
                                    </div>
                                </li>
                            </a>
                        }
                    </ul>
                }
                else
                {
                    <h3>Mailbox is empty</h3>
                }
            </div>
        </div>
</div>