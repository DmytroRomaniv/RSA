@model SupeRSAfe.DTO.Manage.LoginViewModel;
@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <form method="post" asp-controller="Authorization" asp-action="Login">
        <div class="form-group row">
            <div class="col-sm-4">
                <h1>Login</h1>
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="Username"></label><br />
                    <span asp-validation-for="Username" class="input-group-text"></span>
                    <input asp-for="Username" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label><br />
                    <span asp-validation-for="Password" class="input-group-text"></span>
                    <input asp-for="Password" class="form-control" aria-label="Password" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
                <div class="form-group">
                    @Html.ActionLink("Register", "Register", "Authorization")
                </div>
            </div>
        </div>
    </form>
</div>